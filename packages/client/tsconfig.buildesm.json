{
    // config for building esm
    "extends": "./tsconfig",
    "files": ["src/index.ts"],
    "exclude": ["node_modules", "lib", "dist"],
    "compilerOptions": {
        "rootDir": "./src",
        "module": "esnext",
        "outDir": "./dist/esm",
        "declaration": false,
        "declarationMap": false,
        "target": "esnext"
    }
}
